<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/app_bar" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/STD_MARGIN"
        android:layout_marginBottom="@dimen/STD_MARGIN"
        android:layout_marginLeft="@dimen/STD_MARGIN"
        android:layout_marginRight="@dimen/STD_MARGIN">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="2"
                android:ellipsize="end"
                android:maxLines="3"
                android:padding="@dimen/SMALL_STD_MARGIN"
                android:singleLine="false"
                android:text="Total Earning Till Date:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/primaryColor"
                android:textSize="@dimen/S_TEXT_SIZE" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:ellipsize="end"
                android:maxLines="3"
                android:padding="@dimen/SMALL_STD_MARGIN"
                android:singleLine="false"
                android:text="Total Paid Till Date:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/primaryColor"
                android:textSize="@dimen/S_TEXT_SIZE" />


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/STD_MARGIN"
        android:layout_marginBottom="@dimen/STD_MARGIN"
        android:layout_marginLeft="@dimen/STD_MARGIN"
        android:layout_marginRight="@dimen/STD_MARGIN">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:ellipsize="end"
                android:maxLines="3"
                android:padding="@dimen/SMALL_STD_MARGIN"
                android:singleLine="false"
                android:text="Approved Earning available for payout:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/black"
                android:textSize="@dimen/S_TEXT_SIZE" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:ellipsize="end"
                android:maxLines="3"
                android:padding="@dimen/SMALL_STD_MARGIN"
                android:singleLine="false"
                android:text="Earning Pending for Approval: "
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/primaryColor"
                android:textSize="@dimen/S_TEXT_SIZE" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:ellipsize="end"
                android:maxLines="3"
                android:padding="@dimen/SMALL_STD_MARGIN"
                android:singleLine="false"
                android:text="Earning processed for Withdrawal:   20  "
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/primaryColor"
                android:textSize="@dimen/S_TEXT_SIZE" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="@dimen/STD_MARGIN"
        android:background="@color/grey" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/my_earning_level_wise_row" />

            <include layout="@layout/my_earning_level_wise_row" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>