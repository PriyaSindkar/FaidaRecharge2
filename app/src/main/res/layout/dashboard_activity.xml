<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar" />

    <ImageView
        android:id="@+id/imgLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/toolbar"
        android:layout_margin="@dimen/STD_PADDING"
        android:src="@drawable/ic_logout" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgLogout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/SMALL_STD_MARGIN"
            android:layout_marginRight="@dimen/SMALL_STD_MARGIN"
            android:orientation="vertical"
            android:padding="@dimen/STD_PADDING">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/STD_MARGIN"
                android:layout_marginLeft="@dimen/STD_MARGIN"
                android:layout_marginRight="@dimen/STD_MARGIN">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="2"
                            android:ellipsize="end"
                            android:maxLines="3"
                            android:padding="@dimen/SMALL_STD_MARGIN"
                            android:singleLine="false"
                            android:text="Welcome Krishna"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:textColor="@color/primaryColor"
                            android:textSize="@dimen/S_TEXT_SIZE" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:padding="@dimen/SMALL_STD_MARGIN"
                        android:singleLine="false"
                        android:text="Krishna Patel"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="@color/primaryColor"
                        android:textSize="@dimen/S_TEXT_SIZE" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:padding="@dimen/SMALL_STD_MARGIN"
                        android:singleLine="false"
                        android:text="100001"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="@color/primaryColor"
                        android:textSize="@dimen/S_TEXT_SIZE" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:padding="@dimen/SMALL_STD_MARGIN"
                        android:singleLine="false"
                        android:text="Promo Code: 2LKrishna1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="@color/primaryColor"
                        android:textSize="@dimen/S_TEXT_SIZE" />


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/linearBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/primaryColor"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="3"
                    android:padding="@dimen/STD_MARGIN"
                    android:singleLine="false"
                    android:text="Earning Payment Structure"
                    android:textColor="@color/white"
                    android:textSize="@dimen/VS_TEXT_SIZE" />


                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="3"
                    android:padding="@dimen/STD_MARGIN"
                    android:singleLine="false"
                    android:text="How To Refer and Earn"
                    android:textColor="@color/white"
                    android:textSize="@dimen/VS_TEXT_SIZE" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="3"
                    android:padding="@dimen/STD_MARGIN"
                    android:singleLine="false"
                    android:text="Knowledge Base"
                    android:textColor="@color/white"
                    android:textSize="@dimen/VS_TEXT_SIZE" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="2"
                android:ellipsize="end"
                android:maxLines="3"
                android:padding="@dimen/STD_MARGIN"
                android:singleLine="false"
                android:text="How To Earn:"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/black"
                android:textSize="@dimen/S_TEXT_SIZE"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="2"
                android:ellipsize="end"
                android:maxLines="3"
                android:padding="@dimen/STD_MARGIN"
                android:singleLine="false"
                android:text="@string/how_to_earn"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/primaryColor"
                android:textSize="@dimen/S_TEXT_SIZE" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/VS_TEXT_SIZE"
                android:layout_marginRight="@dimen/VS_TEXT_SIZE"
                android:background="@color/grey" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="2"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:padding="@dimen/STD_MARGIN"
                    android:singleLine="false"
                    android:text="Terms and Conditions"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/S_TEXT_SIZE"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="2"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:padding="@dimen/STD_MARGIN"
                    android:singleLine="false"
                    android:text="New"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/S_TEXT_SIZE"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:padding="@dimen/STD_MARGIN"
                    android:singleLine="true"
                    android:text="Mobiwick paused its partnership with Faida Recharge"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/S_TEXT_SIZE"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:padding="@dimen/STD_MARGIN"
                    android:singleLine="true"
                    android:text="Read More.."
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/S_TEXT_SIZE"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/VS_TEXT_SIZE"
                android:layout_marginRight="@dimen/VS_TEXT_SIZE"
                android:background="@color/grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="2"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:padding="@dimen/STD_MARGIN"
                    android:singleLine="false"
                    android:text="Our Active Partners"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/S_TEXT_SIZE"
                    android:textStyle="bold" />


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/primaryColor"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <include
                            layout="@layout/category_item"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/white" />

                        <include
                            layout="@layout/category_item"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/white" />

                        <include
                            layout="@layout/category_item"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />


                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>