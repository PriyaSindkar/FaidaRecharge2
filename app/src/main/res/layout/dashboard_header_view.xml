<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/STD_MARGIN">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <uiCustomControls.LabelView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundColor="@color/maroon"
            app:direction="leftTop"
            app:labelCenterPadding="15dp"
            app:labelTopPadding="15dp"
            app:num="2LKrishna1"
            app:numSize="@dimen/VS_TEXT_SIZE"
            app:numStyle="normal"
            app:text=""
            app:textSize="@dimen/STD_MARGIN" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="2"
                android:ellipsize="end"
                android:maxLines="3"
                android:padding="@dimen/SMALL_STD_MARGIN"
                android:singleLine="false"
                android:text="Welcome Krishna"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/maroon"
                android:textSize="@dimen/S_TEXT_SIZE" />

            <!--<ImageView
                android:id="@+id/imgLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/toolbar"
                android:layout_margin="@dimen/STD_PADDING"
                android:src="@drawable/ic_logout"
                android:tint="@color/maroon"
                android:tintMode="src_atop" />-->


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ellipsize="end"
            android:maxLines="3"
            android:padding="@dimen/SMALL_STD_MARGIN"
            android:singleLine="false"
            android:text="Krishna Patel"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/maroon"
            android:textSize="@dimen/S_TEXT_SIZE" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ellipsize="end"
            android:maxLines="3"
            android:padding="@dimen/SMALL_STD_MARGIN"
            android:singleLine="false"
            android:text="100001"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/maroon"
            android:textSize="@dimen/S_TEXT_SIZE" />

