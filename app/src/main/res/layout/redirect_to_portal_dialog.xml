<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#bc000000">

    <LinearLayout
        android:layout_margin="@dimen/STD_MARGIN"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/button">

            <TextView
                android:id="@+id/txtMoreFiltersHeading"
                android:layout_width="0dp"
                android:padding="@dimen/STD_PADDING"
                android:layout_height="wrap_content"
                android:text="Please Wait..."
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/SMALL_STD_MARGIN"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textSize="@dimen/M_TEXT_SIZE"/>

            <ImageView
                android:id="@+id/cancel"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_navigation_close"/>

        </LinearLayout>

        <LinearLayout
            android:paddingLeft="@dimen/SMALL_STD_MARGIN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/STD_MARGIN">

            <TextView
                android:layout_margin="@dimen/SMALL_STD_MARGIN"
                android:id="@+id/edEmailID"
                android:text="Good Job Done!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_margin="@dimen/SMALL_STD_MARGIN"
                android:id="@+id/edPhoneNo"
                android:text="Promocode copied."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_margin="@dimen/SMALL_STD_MARGIN"
                android:id="@+id/edAddress"
                android:text="@string/promocode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_margin="@dimen/SMALL_STD_MARGIN"
                android:id="@+id/edFooter"
                android:text="@string/promocode_footer_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_margin="@dimen/SMALL_STD_MARGIN"
                android:id="@+id/edHelp"
                android:text="Still Need Help? Call 9439590547"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>