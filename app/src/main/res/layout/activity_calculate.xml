<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar" />

    <TextView
        android:id="@+id/txtHowItWorks"
        android:layout_below="@id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="@dimen/SMALL_STD_MARGIN"
        android:text="How It Works?"
        android:textStyle="bold"
        android:layout_margin="@dimen/STD_MARGIN"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/maroon"
        android:textSize="@dimen/M_TEXT_SIZE" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_above="@+id/linearBottom"
        android:layout_below="@id/txtHowItWorks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/STD_MARGIN"
            android:layout_marginRight="@dimen/STD_MARGIN"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_my_avg" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/STD_MARGIN">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="My Monthly Avg. Recharge Amount"
                        android:inputType="text"
                        android:maxLength="30"
                        android:singleLine="true"
                        android:textColorHint="@color/grey"
                        android:textSize="@dimen/M_TEXT_SIZE" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_me" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/STD_MARGIN">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="No. Of Friends I Can Refers"
                        android:inputType="text"
                        android:maxLength="30"
                        android:singleLine="true"
                        android:textColorHint="@color/grey"
                        android:textSize="@dimen/M_TEXT_SIZE" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_friend" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/STD_MARGIN">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="No. Of Friends My Friends Can Refers"
                        android:inputType="text"
                        android:maxLength="30"
                        android:singleLine="true"
                        android:textColorHint="@color/grey"
                        android:textSize="@dimen/M_TEXT_SIZE" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_crowd" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/STD_MARGIN">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="No. Of Friends My Friends' Friends Can Refers"
                        android:inputType="text"
                        android:maxLength="30"
                        android:singleLine="true"
                        android:textColorHint="@color/grey"
                        android:textSize="@dimen/M_TEXT_SIZE" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_all_avg" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/STD_MARGIN">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Avg. Monthly Recharge Amount of All"
                        android:inputType="text"
                        android:maxLength="30"
                        android:singleLine="true"
                        android:textColorHint="@color/grey"
                        android:textSize="@dimen/M_TEXT_SIZE" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/linearBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/STD_MARGIN"
            android:background="@color/primaryColor"
            android:gravity="center">

            <ImageView
                android:paddingLeft="@dimen/VS_TEXT_SIZE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_calculator" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="3"
                android:singleLine="false"
                android:padding="@dimen/STD_MARGIN"
                android:text="Calculate The Referral Earning Ladder"
                android:textColor="@color/white"
                android:textSize="@dimen/M_TEXT_SIZE" />

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>
